#include <stdio.h>
int main (void)
{

       

        int i, n, j, size, k;

        //Title of lab

        printf("=== DRAW A BIG E ===\n\n");
        do
        {

        //Asks user the size the name should be displayed 

        printf("What size? ");
        scanf( "%d", &size);

        //To tell the user a negative number can't be inputted

        if(size < 0)
        printf("*** ERROR: size cannot be negative\n\n");

        //To tell the user a number less than three can't be inputted

        else if(size < 3)
        printf("*** ERROR: size must be 3 or bigger\n\n");


        } while(size<3);




        //The top asterix line

         for(i = 1; i<=size;i++)
                printf("*");
                printf("\n");

        //The asterix lines in the middle of the letter

         for(j = 1; j<=size;j++)

                printf("*\n");

         for(k = 1; k<=size;k++)

                printf("*");
                printf("\n");

         for(k = 1; k<=size;k++)

                printf("*\n");

        //The bottom asterix line

         for(n = 1; n<=size;n++)

                printf("*");
                printf("\n");



        return 0;

        }
